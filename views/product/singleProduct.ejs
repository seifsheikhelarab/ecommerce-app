<%- include('../partials/header.ejs') %>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12 text-center">
            <h1 class="display-4"><%=product.name%></h1>
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-md-6">
            <img src="../<%=product.image%>" class="img-fluid rounded" alt="<%=product.name%>">
        </div>
        <div class="col-md-6">
            <h3 class="mt-3">Product Details</h3>
            <p class="lead"><%=product.description%></p>
            <p class="h4">Price: <%=product.price%>$</p>
            <button class="btn btn-primary btn-lg mt-3">Add to Cart</button>
            <a href="/product/edit/<%=product._id%>" class="btn btn-secondary btn-lg mt-3">Edit Product</a>
        </div>
    </div>
</div>

<%- include('../partials/footer.ejs') %>


